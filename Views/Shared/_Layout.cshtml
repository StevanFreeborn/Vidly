<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8" />

    <meta name="viewport"
          content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - Vidly</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body class="d-flex flex-column min-vh-100">

    @Html.Partial("_NavBar")

    <div class="my-2">

        @RenderBody()

    </div>


    <footer class="container-fluid mt-auto py-3">

        <hr />

        <div class="d-flex flex-row justify-content-between">

            <div class="">
                &copy; @DateTime.Now.Year - Vidly
            </div>

            <div class="d-flex flex-row">

                <div class="mx-1">
                    @Html.ActionLink(linkText: "About", actionName: "About", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </div>

                <div class="mx-1">
                    @Html.ActionLink(linkText: "Contact", actionName: "Contact", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </div>

            </div>

        </div>

    </footer>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)

</body>

</html>
