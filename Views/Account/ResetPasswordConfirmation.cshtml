@{
    ViewBag.Title = "Reset password confirmation";
}

<div class="container-sm">

    <div class="row my-1">

        <div class="col-12">

            <h1 class="display-6">@ViewBag.Title</h1>

            <h2 class="lead">Your password has been reset. Please click @Html.ActionLink("here", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "link-primary"}) to login.</h2>

        </div>

    </div>

</div>
