@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row align-items-center my-1">

        <div class="col-6">

            <h1 class="display-6">Rentals</h1>

        </div>

        <div class="col-6 text-end">

            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Add Rental", "Add", null, new { @class = "btn btn-sm btn-primary" })
            }

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <table id="rentals-table" class="table table-hover nowrap w-100">

                <thead>
                </thead>

                <tbody>
                </tbody>

            </table>

        </div>

    </div>

    @Html.Partial("_EditRentalModal")

    @Html.Partial("_DeleteModal")

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="module" src="~/Scripts/Views/Rentals/Index.js"></script>
}