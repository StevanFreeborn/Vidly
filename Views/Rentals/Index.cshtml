@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row align-items-center my-1">

        <div class="col-6">

            <h1 class="display-6">Rentals</h1>

        </div>

        <div class="col-6 text-end">

            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Add Rental", "Add", null, new { @class = "btn btn-sm btn-primary" })
            }

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <table id="rentals-table" class="table table-hover nowrap w-100">

                <thead>
                </thead>

                <tbody>
                </tbody>

            </table>

        </div>

    </div>

    <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">

        <div class="modal-dialog modal-dialog-centered">

            <div class="modal-content">

                <div class="modal-header">

                    <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>

                </div>

                <div class="modal-body">

                    <p class="m-0">Are you sure you want to delete this rental?</p>

                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

                    <button id="delete-button" type="button" class="btn btn-danger" data-bs-dismiss="modal"><i class="fa-solid fa-trash"></i> Delete</button>

                </div>

            </div>

        </div>

    </div>

</div>

@section scripts
{
    <script type="module" src="~/Scripts/Views/Rentals/Index.js"></script>
}