@{
    ViewBag.Title = "Add Rental";
}

<div class="container-sm">

    <div class="row align-items-center my-1">

        <div class="col-12">

            <h1 class="display-6">Add Rentals</h1>

            <form id="newRental">

                <div class="mb-3">
                    <label class="form-label">Customer</label>

                    <div class="tt-container">
                        <input id="customer" name="customer" required data-rule-valid-customer="true" type="text" value="" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Select Movie(s)</label>

                    <div class="tt-container">
                        <input id="movie" name="movie" data-rule-one-movie type="text" value="" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">

                    <h6>Movies Selected:</h6>

                    <ul id="selectedMovies" class="list-group">

                        <li id="moviesPlaceholder" class="list-group-item">No movies selected.</li>

                    </ul>

                </div>

                <button class="btn btn-primary">Add</button>

            </form>

        </div>

    </div>

</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="module" src="~/Scripts/Views/Rentals/RentalForm.js"></script>
}