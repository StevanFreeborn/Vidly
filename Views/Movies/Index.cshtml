@model Vidly.ViewModels.MoviesViewModel

@{
    ViewBag.Title = "Movies";
}
<div class="container">

    <div class="row">

        <div class="col-6">

            <h2>Movies</h2>

        </div>

        <div class="col-6 text-end">

            @Html.ActionLink("Add Movie", "Add", null, new { @class = "btn btn-sm btn-primary" })

        </div>

    </div>

    <div class="row">

        <div class="col-12">

            <table id="movies-table" class="table table-bordered table-hover">

                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Genre</th>
                    </tr>
                </thead>

                <tbody>
                </tbody>

            </table>

        </div>

    </div>

</div>

@section scripts
{
    <script src="~/Scripts/Movies/Index.js"></script>
}