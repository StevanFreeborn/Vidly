@model Vidly.ViewModels.MovieFormViewModel

@{
    ViewBag.Title = Model.Movie.Id is 0 ? "Add Movie" : "Edit Movie";
}

<div class="container-sm">

    <div class="row">

        <div class="col-12">

            <h2>@(Model.Movie.Id is 0 ? "Add Movie" : "Edit Movie")</h2>

            @using (Html.BeginForm("Save", "Movies"))
            {
                <div class="mb-3">
                    @Html.LabelFor(m => m.Movie.Name, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Movie.ReleaseDate, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Movie.GenreId, new { @class = "form-label" })
                    @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select Genre", new { @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Movie.NumberInStock, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control", type = "number", min = "0" })
                </div>

                @Html.HiddenFor(m => m.Movie.Id)

                <button type="submit" class="btn btn-primary">Save</button>
            }

        </div>

    </div>

</div>

