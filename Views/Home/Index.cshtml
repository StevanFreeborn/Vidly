@{
    ViewBag.Title = "Home Page";
}

<div class="px-4 py-5 my-5 text-center">

    <div class="my-4">

        <i class="fa-solid fa-computer fa-4x mx-3"></i>

        <i class="fa-solid fa-wifi fa-4x mx-3""></i>

        <i class="fa-solid fa-database fa-4x mx-4"></i>

    </div>

    <h1 class="display-1 fw-bold">Vidly</h1>

    <div col-lg-6 mx-auto>

        <p class="lead mb-4">A custom software management tool designed for a small, privately-owned, video rental business.</p>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">

            @Html.ActionLink(linkText: "Learn More", actionName: "About", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-lg px-4 gap-3" })

            @Html.ActionLink(linkText: "Contact", actionName: "Contact", controllerName: "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-dark btn-lg px-4" })

        </div>

    </div>

</div>